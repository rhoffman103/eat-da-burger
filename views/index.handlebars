<div class="container my-container container-border">
  
  {{!-- LOGO --}}
  <div class="d-flex justify-content-center">
    <div class="logo-border b-border d-inline-flex m-5">
      <h1 class="logo b-border">Eat Da Burger!</h1>
    </div>
  </div>

  {{!-- BURGER LISTS --}}
  <div class="row">
    
    <div class="col-md-6">
      <div class="chalk-board-border b-border">
        <div class="chalk-board b-border">
          <h2 class="text-center chalk">Menu</h2>
          <ul>
            {{#each burgers}}
            {{#unless devoured}}
              <li class="row">
                <p class="col-8 chalk f-3vh">{{burger_name}}</p>
                <div class="col-4">
                  <button type="button" class="change-devour btn btn-outline-light" data-id="{{id}}" data-eaten="{{devoured}}">
                    Eat Me!
                  </button>
                </div>
              </li>
            {{/unless}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
    
    <div class="col-md-6">
      <div class="chalk-board-border b-border">
        <div class="chalk-board p-2 b-border">
          <h2 class="text-center chalk">Eaten Burgers</h2>
          <ul>
            {{#each burgers}}
            {{#if devoured}}
              <li class="row">
                <p class="chalk f-3vh">{{burger_name}}</p>
              </li>
            {{/if}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>

  </div>

  {{!-- ORDER BURGER DIV --}}
  <div class="d-flex justify-content-center">
    <div class="kitchen-window-border b-border mt-5">
      <div class="kitchen b-border p-4">
        <h2 class="d-flex justify-content-center">Create Your Own Burger!</h2>
        <form class="create-form">

          <div class="form-group d-flex justify-content-center">
            <label for="burgerTextarea1">Burger Name: </label>
            <textarea class="form-control" id="burg" rows="1"></textarea>
          </div>

          <div class="d-flex justify-content-center">
            <button type="submit" class="order-btn btn rounded border border-dark">Add Burger to Menu</button>
          </div>

        </form>
      </div>
    </div>
  </div>
  
</div>