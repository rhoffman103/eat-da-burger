<div class="container my-container">
  
  <div class="d-flex justify-content-center">
    <h1>Eat Da Burger!</h1>
  </div>

  <div class="row">
    
    <div class="col-md-6">
      <h2 class="text-center">Menu</h2>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-md-6">
      <h2 class="text-center">Eaten Burgers</h2>
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>

  </div>

  <h2 class="d-flex justify-content-center">Create Your Own Burger!</h2>
  <form class="create-form mb-5">

    <div class="form-group d-flex justify-content-center">
      <label for="burg">Burger Name:</label>
      <input type="text" id="burg" name="name">
    </div>

    <div class="d-flex justify-content-center">
      <button type="submit">Add Burger to Menu</button>
    </div>

  </form>

</div>